{
  "name": "ybiq",
  "version": "11.4.3",
  "description": "Useful command-line tools for Node.js project",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "MIT",
  "repository": "ybiquitous/ybiq",
  "keywords": [
    "cli",
    "command-line",
    "utility",
    "tool"
  ],
  "main": "lib/index.js",
  "bin": "bin/cli.js",
  "types": "types/ybiq.d.ts",
  "files": [
    "bin",
    "lib",
    "types",
    ".editorconfig",
    ".remarkignore",
    ".github/workflows/commitlint.yml",
    ".github/workflows/npm-audit-fix.yml",
    ".github/workflows/release.yml",
    ".github/workflows/test.yml"
  ],
  "engines": {
    "node": ">=10.17.0"
  },
  "dependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.2",
    "eslint": "^7.8.1",
    "husky": "^4.3.0",
    "lint-staged": "^10.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.1",
    "remark-cli": "^8.0.1",
    "remark-lint-no-heading-punctuation": "^2.0.1",
    "remark-preset-lint-recommended": "^4.0.1",
    "remark-validate-links": "^10.0.2",
    "standard-version": "^9.0.0",
    "yargs": "^15.4.1"
  },
  "devDependencies": {
    "@types/node": "^14.6.4",
    "@types/yargs": "^15.0.5",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint-config-ybiquitous": "^11.1.0",
    "eslint-plugin-jest": "^23.20.0",
    "fs-extra": "^9.0.1",
    "jest": "^26.4.2",
    "typescript": "^4.0.2"
  },
  "scripts": {
    "test": "jest --coverage && npm run test:types",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:types": "tsc --project test/tsconfig.test.json --noEmit",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "prettier": "prettier --ignore-path .gitignore .",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "prerelease": "git switch main && git pull && npm ci && npm test",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "post-commit": "npm run release:dry-run"
    }
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": "eslint --fix",
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "standard-version": {
    "sign": true,
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "remarkConfig": {
    "plugins": [
      "preset-lint-recommended",
      "lint-no-heading-punctuation",
      [
        "lint-list-item-bullet-indent",
        false
      ],
      [
        "lint-list-item-indent",
        false
      ],
      "validate-links"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        200
      ],
      "scope-enum": [
        2,
        "always",
        [
          "",
          "actions",
          "api",
          "commitlint",
          "coverage",
          "deps",
          "deps-dev",
          "editorconfig",
          "eslint",
          "init",
          "lint-staged",
          "package",
          "prettier",
          "readme",
          "release",
          "remark",
          "standard-version",
          "types"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "coverage"
    ],
    "extends": [
      "ybiquitous/node"
    ],
    "rules": {
      "import/no-internal-modules": "off"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "ybiquitous/typescript",
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./test/tsconfig.test.json"
          ]
        },
        "rules": {
          "node/no-unsupported-features/es-syntax": "off"
        }
      },
      {
        "files": "**/*.test.js",
        "extends": "plugin:jest/recommended",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
