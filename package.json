{
  "name": "ybiq",
  "version": "3.0.2",
  "description": "Useful command-line tools for Node.js project",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "MIT",
  "repository": "ybiquitous/ybiq",
  "keywords": [
    "cli",
    "command-line",
    "utility",
    "tool"
  ],
  "main": "index.js",
  "bin": "bin/cli.js",
  "files": [
    "bin",
    "lib",
    "templates",
    ".editorconfig"
  ],
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@commitlint/travis-cli": "^7.0.0",
    "eslint": "^4.15.0",
    "fs-extra": "^6.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "markdownlint-cli": "^0.10.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "standard-version": "^4.3.0",
    "yargs": "^11.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.51",
    "@babel/preset-env": "7.0.0-beta.51",
    "@babel/register": "7.0.0-beta.51",
    "babel-plugin-istanbul": "4.1.6",
    "mocha": "5.2.0",
    "nyc": "12.0.2"
  },
  "optionalDependencies": {
    "eslint-config-ybiquitous": "^4.2.1"
  },
  "scripts": {
    "test": "NODE_ENV=test nyc --check-coverage mocha",
    "test:watch": "NODE_ENV=test mocha --watch",
    "test:coverage": "NODE_ENV=test nyc report --reporter=text-lcov > coverage.lcov",
    "lint:js": "eslint --ignore-path .gitignore --ext .js,.jsx,.mjs .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint": "npm-run-all --print-name --print-label --parallel lint:*",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged",
    "release": "standard-version",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": [
      "eslint --fix --no-ignore",
      "git add"
    ],
    "*.md": "markdownlint --ignore CHANGELOG.md"
  },
  "nyc": {
    "exclude": [
      "lib",
      "test"
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ]
}
