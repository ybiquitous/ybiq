{
  "name": "ybiq",
  "version": "19.0.0",
  "description": "Useful command-line tools for Node.js project",
  "author": "Masafumi Koba",
  "license": "MIT",
  "repository": "ybiquitous/ybiq",
  "keywords": [
    "cli",
    "command-line",
    "utility",
    "tool"
  ],
  "type": "module",
  "exports": "./lib/index.js",
  "bin": "./lib/cli.js",
  "types": "./types/ybiq.d.ts",
  "files": [
    "lib",
    "types",
    ".editorconfig",
    ".remarkignore",
    ".github/workflows/dependabot-auto-merge.yml",
    ".github/workflows/npm-audit-fix.yml",
    ".github/workflows/npm-diff.yml",
    ".github/workflows/release-pr.yml",
    ".github/workflows/release.yml",
    ".github/workflows/test.yml",
    ".husky/commit-msg",
    ".husky/pre-commit"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "provenance": true
  },
  "dependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "conventional-changelog": "^7.1.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "remark-cli": "^12.0.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^2.0.5",
    "@types/node": "^24.7.2",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "eslint-config-ybiquitous": "^22.0.0",
    "eslint-plugin-jest": "^29.0.1",
    "jest": "^30.2.0",
    "remark-preset-ybiquitous": "^0.5.0",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "pretest": "npm run lint",
    "test": "npm run test:types && NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "npm --ignore-scripts test -- --watch",
    "test:coverage": "npm --ignore-scripts test -- --coverage",
    "test:types": "tsc --project test/tsconfig.test.json --noEmit",
    "lint:js": "eslint --cache --ext=js,jsx,cjs,mjs,ts,tsx .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "npm run lint:types -- --watch",
    "lint:commit": "commitlint --from HEAD~10",
    "lint": "npm-run-all --print-label --silent --parallel lint:*",
    "prettier": "prettier --cache .",
    "lint:styles": "npm run prettier -- --check",
    "lint:styles:fix": "npm run prettier -- --write",
    "format": "npm-run-all --print-label --silent --parallel lint:*:fix",
    "clean": "git clean -dx --force --exclude=node_modules --exclude=.husky",
    "changelog": "if [ ! -f CHANGELOG.md ]; then opts='--first-release' ; fi && conventional-changelog --preset conventional-changelog-conventionalcommits $opts && prettier --write CHANGELOG.md",
    "changelog:dryrun": "npm version \"${NEW_VERSION:-major}\" --no-git-tag-version && git --no-pager diff CHANGELOG.md && git checkout CHANGELOG.md package.json package-lock.json",
    "postversion": "npm run changelog",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,ts,tsx}": "eslint --cache --fix",
    "!(**/*.snap|.husky/**)": "prettier --cache --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        400
      ],
      "header-max-length": [
        2,
        "always",
        120
      ],
      "scope-enum": [
        2,
        "always",
        [
          "",
          "actions",
          "api",
          "changelog",
          "commitlint",
          "coverage",
          "deps",
          "deps-dev",
          "editorconfig",
          "eslint",
          "husky",
          "init",
          "lint-staged",
          "package",
          "prettier",
          "readme",
          "release",
          "remark",
          "types"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "coverage",
      "dist",
      "tmp"
    ],
    "reportUnusedDisableDirectives": true,
    "extends": [
      "ybiquitous/node"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "es2020": true
    },
    "rules": {
      "import/extensions": "off",
      "import/no-internal-modules": "off",
      "import/no-unresolved": "off",
      "import/prefer-default-export": "off",
      "node/no-missing-import": "off"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "ybiquitous/typescript",
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./test/tsconfig.test.json"
          ]
        },
        "rules": {
          "import/no-internal-modules": "off",
          "import/no-unresolved": "off",
          "node/no-unsupported-features/es-syntax": "off"
        }
      },
      {
        "files": "**/*.test.js",
        "extends": "plugin:jest/recommended",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
