{
  "name": "ybiq",
  "version": "13.1.0",
  "description": "Useful command-line tools for Node.js project",
  "author": "Masafumi Koba",
  "license": "MIT",
  "repository": "ybiquitous/ybiq",
  "keywords": [
    "cli",
    "command-line",
    "utility",
    "tool"
  ],
  "type": "module",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "types": "types/ybiq.d.ts",
  "files": [
    "lib",
    "types",
    ".editorconfig",
    ".remarkignore",
    ".github/workflows/commitlint.yml",
    ".github/workflows/npm-audit-fix.yml",
    ".github/workflows/release.yml",
    ".github/workflows/test.yml",
    ".husky/commit-msg",
    ".husky/post-commit",
    ".husky/pre-commit"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "dependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "eslint": "^7.26.0",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "remark-cli": "^9.0.0",
    "standard-version": "^9.3.0",
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "^15.3.0",
    "@types/yargs": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "eslint-config-ybiquitous": "^14.0.1",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.3",
    "remark-preset-ybiquitous": "^0.0.5",
    "typescript": "^4.2.4"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage && npm run test:types",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:types": "tsc --project test/tsconfig.test.json --noEmit",
    "lint:js": "eslint .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "remark . --frail",
    "lint:md:fix": "remark . --output",
    "lint:types": "tsc --noEmit",
    "lint:types:watch": "npm run lint:types -- --watch",
    "lint": "npm-run-all --print-label --parallel lint:* prettier:check",
    "prettier": "prettier --ignore-path .gitignore .",
    "prettier:check": "npm run prettier -- --check",
    "prettier:write": "npm run prettier -- --write",
    "format": "npm-run-all --print-label --parallel lint:*:fix prettier:write",
    "clean": "git clean -dx --force --exclude=node_modules --exclude=.husky",
    "prerelease": "git switch main && git pull && npm ci && npm run clean && npm test && npm run lint && npm run clean",
    "release": "standard-version",
    "release:dry-run": "standard-version --dry-run",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx}": "eslint --fix",
    "!(*.snap)": "prettier --write",
    "!(CHANGELOG).md": "remark --frail"
  },
  "standard-version": {
    "sign": true,
    "scripts": {
      "postchangelog": "prettier --write CHANGELOG.md"
    }
  },
  "remarkConfig": {
    "plugins": [
      "remark-preset-ybiquitous"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        200
      ],
      "scope-enum": [
        2,
        "always",
        [
          "",
          "actions",
          "api",
          "commitlint",
          "coverage",
          "deps",
          "deps-dev",
          "editorconfig",
          "eslint",
          "init",
          "lint-staged",
          "package",
          "prettier",
          "readme",
          "release",
          "remark",
          "standard-version",
          "types"
        ]
      ]
    }
  },
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "coverage",
      "dist",
      "tmp"
    ],
    "reportUnusedDisableDirectives": true,
    "extends": [
      "ybiquitous/node"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "env": {
      "es2020": true
    },
    "rules": {
      "import/extensions": "off",
      "import/no-internal-modules": "off",
      "import/prefer-default-export": "off"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "extends": "ybiquitous/typescript",
        "parserOptions": {
          "project": [
            "./tsconfig.json",
            "./test/tsconfig.test.json"
          ]
        },
        "rules": {
          "node/no-unsupported-features/es-syntax": "off"
        }
      },
      {
        "files": "**/*.test.js",
        "extends": "plugin:jest/recommended",
        "rules": {
          "node/no-unsupported-features/node-builtins": "off"
        }
      }
    ]
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ],
  "jest": {
    "testRegex": ".*\\.test\\.js$",
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 90,
        "lines": 95,
        "statements": 95
      }
    }
  }
}
