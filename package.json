{
  "name": "ybiq",
  "version": "3.2.0",
  "description": "Useful command-line tools for Node.js project",
  "author": "Masafumi Koba <ybiquitous@gmail.com>",
  "license": "MIT",
  "repository": "ybiquitous/ybiq",
  "keywords": [
    "cli",
    "command-line",
    "utility",
    "tool"
  ],
  "main": "index.js",
  "bin": "bin/cli.js",
  "files": [
    "bin",
    "lib",
    "templates",
    ".editorconfig",
    ".prettierignore",
    ".markdownlint.json"
  ],
  "engines": {
    "node": ">=8.3.0"
  },
  "dependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.0",
    "@commitlint/travis-cli": "^7.0.0",
    "eslint": "^5.0.1",
    "fs-extra": "^6.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "markdownlint-cli": "^0.10.0",
    "npm-run-all": "^4.1.2",
    "prettier": "^1.10.2",
    "standard-version": "^4.3.0",
    "yargs": "^12.0.0"
  },
  "devDependencies": {
    "nodemon": "1.17.5",
    "nyc": "12.0.2",
    "tape": "4.9.1"
  },
  "optionalDependencies": {
    "eslint-config-ybiquitous": "^5.0.0"
  },
  "scripts": {
    "test": "nyc --check-coverage --lines 100 --branches 90 tape \"test/**/*.test.js\"",
    "test:watch": "nodemon --ext js --watch . --exec \"tape test/**/*.test.js\"",
    "test:coverage": "nyc report --reporter=text-lcov > coverage.lcov",
    "lint:js": "eslint --ignore-path .gitignore --ext .js,.jsx,.mjs .",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:md": "markdownlint --ignore node_modules --ignore CHANGELOG.md \"**/*.md\"",
    "lint:md:fix": "prettier --write \"**/*.md\"",
    "lint": "npm-run-all --print-name --print-label --parallel lint:*",
    "commitmsg": "commitlint -E GIT_PARAMS",
    "precommit": "lint-staged",
    "release": "standard-version",
    "release:dry-run": "npm run release -- --dry-run"
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx,mjs}": [
        "eslint --fix --no-ignore",
        "git add"
      ],
      "*.md": [
        "prettier --write",
        "markdownlint",
        "git add"
      ]
    },
    "ignore": [
      "CHANGELOG.md"
    ]
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "browserslist": [
    "> 1%",
    "not ie 11",
    "not op_mini all"
  ]
}
